{
  "name": "oo-loop",
  "version": "0.5.0",
  "description": "SCSS companion for Front-end Developer",
  "style": "dist/loop.css",
  "sass": "scss/_loop.scss",
  "main": "dist/",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "sass --watch --style=expanded --no-source-map scss/_loop.scss dist/loop.css",
    "build": "sass --style=compressed --no-source-map scss/_loop.scss dist/loop.min.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oo-loop/loop.git"
  },
  "keywords": [
    "scss",
    "sass",
    "css",
    "front-end",
    "developer",
    "companion",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/oo-loop/loop/issues"
  },
  "author": "GPlus Media",
  "license": "MIT",
  "devDependencies": {
    "normalize.css": "^8.0.0",
    "sass": "^1.79.2"
  },
  "files": [
    "dist/",
    "scss/"
  ],
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
