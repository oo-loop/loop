{
  "name": "oo-loop",
  "version": "1.0.0-beta",
  "description": "Dev companion for flexible and expressive CSS",
  "style": "dist/loop.css",
  "sass": "scss/_loop.scss",
  "main": "scss/_loop.scss",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "node-sass -r --output-style expanded --precision 6 src/index.scss dist/loop.css",
    "build": "node-sass --output-style compressed --precision 6 src/index.scss dist/loop.css",
    "watch": "npm run dev && npm run dev -- -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oo-loop/loop.git"
  },
  "keywords": [
    "scss",
    "sass",
    "css",
    "flexible",
    "expressive",
    "frontend",
    "companion",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/oo-loop/loop/issues"
  },
  "author": "GPlus Media",
  "license": "MIT",
  "devDependencies": {
    "node-sass": "^4.13.1"
  },
  "files": [
    "dist/",
    "scss/"
  ],
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
